<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="view_delivery_carrier_form_with_provider_mp" model="ir.ui.view">
    <field name="name">delivery.carrier.form.provider.mp</field>
    <field name="model">delivery.carrier</field>
    <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
    <field name="arch" type="xml">
        <xpath expr="//page[@name='destination']" position='before'>
            <page string="MP Configuration" name="mp_configuration"
                 attrs="{'invisible': [('delivery_type', '!=', 'mp')]}">
                <group>
                    <group>
                        <field name="mp_SiteID" attrs="{'required': [('delivery_type', '=', 'mp')]}"/>
                        <field name="mp_password" attrs="{'required': [('delivery_type', '=', 'mp')]}"/>
                        <field name="mp_account_number" attrs="{'required': [('delivery_type', '=', 'mp')]}"/>
                        <field name="mp_region_code" attrs="{'required': [('delivery_type', '=', 'mp')]}"/>
                        <field name="mp_product_code" attrs="{'required': [('delivery_type', '=', 'mp')]}"/>
                    </group>
                    <group>
                        <field name="mp_default_package_type_id" attrs="{'required': [('delivery_type', '=', 'mp')]}" domain="[('package_carrier_type', '=', 'mp')]"/>
                        <field name="mp_package_weight_unit" attrs="{'required': [('delivery_type', '=', 'mp')]}"/>
                        <field name="mp_package_dimension_unit" attrs="{'required': [('delivery_type', '=', 'mp')]}"/>
                        <field name="mp_label_image_format" string="Label Format" attrs="{'required': [('delivery_type', '=', 'mp')]}"/>
                        <field name="mp_label_template" attrs="{'required': [('delivery_type', '=', 'mp')]}"/>
                    </group>
                    <group string="Options">
                        <field name="can_generate_return" invisible="1"/>
                        <field name="return_label_on_delivery" attrs="{'invisible': [('can_generate_return', '=', False)]}"/>
                        <field name="get_return_label_from_portal" attrs="{'invisible': [('return_label_on_delivery', '=', False)]}"/>
                        <field name="mp_dutiable"/>
                        <field name="mp_duty_payment" string='Duties paid by' attrs="{'required': [('delivery_type', '=', 'mp')], 'invisible': [('mp_dutiable', '=', False)]}"/>
                    </group>
                    <group string="Custom Data" name="mp_customs" groups="base.group_no_one">
                        <field name="mp_custom_data_request" nolabel="1" placeholder="'rate': {}, 'ship': {}, 'return': {}"/>
                    </group>
                </group>
            </page>
        </xpath>
    </field>
</record>

</odoo>
